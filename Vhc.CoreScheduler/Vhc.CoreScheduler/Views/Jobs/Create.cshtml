@model Vhc.CoreScheduler.Models.JobViewModel

@{
    ViewData["Title"] = "Create Job";
}

<h2>Create</h2>

<h4>JobDefinition</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="JobGroupId" class="control-label"></label>
                <select asp-for="JobGroupId"
                        asp-items="@(new SelectList(Model.Groups,"Id","Name"))">
                    <option>Please select group</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="UnitCollectionId" class="control-label"></label>
                <input asp-for="UnitCollectionId" class="form-control" />
                <span asp-validation-for="UnitCollectionId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
