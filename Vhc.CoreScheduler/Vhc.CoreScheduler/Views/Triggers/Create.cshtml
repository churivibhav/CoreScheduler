@model Vhc.CoreScheduler.Models.TriggerViewModel

@{
    ViewData["Title"] = "Create";
}

<h2>Create Trigger</h2>

<h4>TriggerDefinition</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CronExpression" class="control-label"></label>
                <input asp-for="CronExpression" class="form-control" />
                <span asp-validation-for="CronExpression" class="text-danger"></span>
            </div>
            <div class="form-group">
                <select asp-for="EnvironmentId"
                        asp-items="@(new SelectList(Model.Environments,"Id","Name"))">
                    <option>Please select environment</option>
                </select>
            </div>
            <div class="form-group">
                <select asp-for="JobDefinitionId"
                        asp-items="@(new SelectList(Model.Jobs,"Id","Name"))">
                    <option>Please select job</option>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
